{
    "extends": [
        "next/core-web-vitals",
        "airbnb",
        "airbnb-typescript",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "react/function-component-definition": [
            2,
            {
                "namedComponents": ["arrow-function", "function-declaration", "function-expression"],
                "unnamedComponents": "arrow-function"
            }
        ],
        "react/jsx-props-no-spreading": "off", //makes easier to work with react form hook
        "jsx-a11y/label-has-associated-control": "off",
        "react/no-array-index-key":"off" //for a small project shouldn't be a problem
    }
}
